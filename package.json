{
    "name": "audibenecodesnippets",
    "displayName": "Audibene Code Snippets",
    "description": "Quick Code Snippets for Audibene",
    "version": "2.0.0",
    "icon": "icon.png",
    "publisher": "UIUXTeamAudibene",
    "engines": {
        "vscode": "^1.47.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jatinsharmaa/AudibeneCodeSnippets"
    },
    "categories": [
        "Snippets"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:javascript",
        "onLanguage:apex"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Audibene Code Snippets",
            "properties": {
                "audibenecodesnippets.enableSLDSClass": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable SLDS Classes"
                },
                "audibenecodesnippets.enableAuraSnippets": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Aura Snippets"
                },
                "audibenecodesnippets.enableLWCSnippets": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable LWC Snippets"
                },
                "audibenecodesnippets.enableApexSnippets": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Apex snippets"
                },
                "audibenecodesnippets.enableJavascriptSnippets": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable JavaScript snippets"
                },
                "audibenecodesnippets.enableAdvancedMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable Advanced Mode to see all SLDS classes and Snippets. By default it only supports the most used snippets in Audibene"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./",
        "install-telemetry": "npm install vscode-extension-telemetry",
        "initDev": "npm i"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.47.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "ts-loader": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0",
        "webpack": "^4.44.0",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "vscode-extension-telemetry": "^0.1.6"
    }
}
